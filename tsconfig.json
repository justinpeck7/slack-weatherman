{
  "compilerOptions": {
    "rootDir": "src",
    "target": "esnext",
    "lib": ["esnext"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noEmit": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": ["*.ts", "/**/*.ts"],
  "exclude": ["node_modules"]
}
